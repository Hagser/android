<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:theme="@style/AppTheme"
    android:paddingTop="@dimen/activity_vertical_margin" android:keepScreenOn="true"
    android:paddingBottom="@dimen/activity_vertical_margin" android:id="@+id/linear_layout" tools:context=".MainActivity"

    android:orientation="vertical">
    <TextView android:id="@+id/text_x"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_y"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_z"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_alarm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_lon"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
    <TextView android:id="@+id/text_speed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>

    <TextView android:id="@+id/text_count"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/bigtext"
              android:textColor="@color/custom_text_color"/>
<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/started"
        android:id="@+id/switch_start"
        android:textColor="@color/custom_text_color"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/syncing"
        android:id="@+id/switch_sync"
        android:textColor="@color/custom_text_color"/>
</LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/clickit" android:text="@string/click"
        android:background="@color/custom_theme_color"
        android:textColor="@color/custom_text_color"/>
</LinearLayout>